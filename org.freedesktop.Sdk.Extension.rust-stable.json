{
    "id": "org.freedesktop.Sdk.Extension.rust-stable",
    "branch": "21.08",
    "runtime": "org.freedesktop.Sdk",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "21.08",
    "sdk-extensions": [],
    "separate-locales": false,
    "appstream-compose": false,
    "cleanup": [
        "/share/info",
        "/share/man"
    ],
    "build-options": {
        "prefix": "/usr/lib/sdk/rust-stable"
    },
    "modules": [
        {
            "name": "rust",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "arm",
                        "aarch64"
                    ],
                    "dest": "rust-armv7-unknown-linux-gnueabihf",
                    "url": "https://static.rust-lang.org/dist/2022-04-07/rust-1.60.0-armv7-unknown-linux-gnueabihf.tar.xz",
                    "sha256": "f3c372bbb8927be77913dc7f3d1b4bacfdd0776008d617280dd8d046fe37846c",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "armv7-unknown-linux-gnueabihf"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "dest": "rust-aarch64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2022-04-07/rust-1.60.0-aarch64-unknown-linux-gnu.tar.xz",
                    "sha256": "5d18bc384273edbd8a4b6d18104685651fb42d5f07bdf518ef2ec3641269c95d",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "aarch64-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "dest": "rust-x86_64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2022-04-07/rust-1.60.0-x86_64-unknown-linux-gnu.tar.xz",
                    "sha256": "83c3fb8645379ec308192fa713df87044892639495722077e07aa779b310239e",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "x86_64-unknown-linux-gnu",
                        "is-main-source": true
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "i386",
                        "x86_64"
                    ],
                    "dest": "rust-i686-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2022-04-07/rust-1.60.0-i686-unknown-linux-gnu.tar.xz",
                    "sha256": "94567ff691b46ef3dff64f3866445a278a17b20639e62cdc4b6fcd7aed86cec8",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "i686-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "dest": "rust-src",
                    "url": "https://static.rust-lang.org/dist/2022-04-07/rust-src-1.60.0.tar.xz",
                    "sha256": "66a96ff728d1538b1313322a754bf5b50bbfd0c3c75c6a5504c9e906918cbcb1",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust-src",
                        "target": "*"
                    }
                }
            ],
            "build-options": {
                "arch": {
                    "x86_64": {
                        "env": {
                            "NATIVE_TARGET": "x86_64-unknown-linux-gnu",
                            "COMPAT_TARGET": "i686-unknown-linux-gnu"
                        }
                    },
                    "i386": {
                        "env": {
                            "NATIVE_TARGET": "i686-unknown-linux-gnu",
                            "COMPAT_TARGET": ""
                        }
                    },
                    "aarch64": {
                        "env": {
                            "NATIVE_TARGET": "aarch64-unknown-linux-gnu",
                            "COMPAT_TARGET": "armv7-unknown-linux-gnueabihf"
                        }
                    },
                    "arm": {
                        "env": {
                            "NATIVE_TARGET": "armv7-unknown-linux-gnueabihf",
                            "COMPAT_TARGET": ""
                        }
                    }
                }
            },
            "build-commands": [
                "cd \"rust-$NATIVE_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --without=rust-docs --disable-ldconfig --verbose",
                "test -n \"$COMPAT_TARGET\" &&  cd \"rust-$COMPAT_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose --components=rust-std-$COMPAT_TARGET,rust-analysis-$COMPAT_TARGET",
                "cd rust-src && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose"
            ]
        },
        {
            "name": "rust-analyzer",
            "sources": [
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/rust-analyzer/rust-analyzer/releases/download/2022-04-04/rust-analyzer-x86_64-unknown-linux-gnu.gz",
                    "sha256": "01471543519ec491cac99e656c43a6781ed4f77c2fc8e9eeba520822e25585ab",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-x86_64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/rust-analyzer/rust-analyzer/releases/download/2022-04-04/rust-analyzer-aarch64-unknown-linux-gnu.gz",
                    "sha256": "2d95e4c789abafbb5df58cd811e715cfd334b4d302dbe3d0a8bcca12591fb0b9",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-aarch64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "gunzip rust-analyzer-linux.gz",
                "install -m 755 rust-analyzer-linux /usr/lib/sdk/rust-stable/bin/rust-analyzer"
            ]
        },
        {
            "name": "scripts",
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/rust-stable/bin"
                    ],
                    "dest-filename": "enable.sh"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "cp enable.sh /usr/lib/sdk/rust-stable/"
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.freedesktop.Sdk.Extension.rust-stable.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose  --basename=org.freedesktop.Sdk.Extension.rust-stable --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.rust-stable"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.rust-stable.appdata.xml"
                }
            ]
        }
    ]
}