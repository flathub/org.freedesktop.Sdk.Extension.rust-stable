{
    "id": "org.freedesktop.Sdk.Extension.rust-stable",
    "branch": "24.08",
    "runtime": "org.freedesktop.Sdk",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "24.08",
    "sdk-extensions": [],
    "separate-locales": false,
    "appstream-compose": false,
    "cleanup": [
        "/share/info",
        "/share/man"
    ],
    "build-options": {
        "prefix": "/usr/lib/sdk/rust-stable"
    },
    "modules": [
        {
            "name": "rust",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "arm",
                        "aarch64"
                    ],
                    "dest": "rust-armv7-unknown-linux-gnueabihf",
                    "url": "https://static.rust-lang.org/dist/2024-09-05/rust-1.81.0-armv7-unknown-linux-gnueabihf.tar.xz",
                    "sha256": "c974ae054ee293e8776b4dd6738487a973e9cc9a813cb87ff01158d785564307",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "armv7-unknown-linux-gnueabihf"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "dest": "rust-aarch64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2024-09-05/rust-1.81.0-aarch64-unknown-linux-gnu.tar.xz",
                    "sha256": "5cd65b0a2724e4193a5c4ba79f0687f8c11d52c2d58ee35bc7ce5958a3cc8dc2",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "aarch64-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "dest": "rust-x86_64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2024-09-05/rust-1.81.0-x86_64-unknown-linux-gnu.tar.xz",
                    "sha256": "1a9ee8caaa18a3e433fef93cea8a55dc1ebd478ed761b2fef69d4565f9d00e7f",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "x86_64-unknown-linux-gnu",
                        "is-main-source": true
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "i386",
                        "x86_64"
                    ],
                    "dest": "rust-i686-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2024-09-05/rust-1.81.0-i686-unknown-linux-gnu.tar.xz",
                    "sha256": "b8e1a2889c574d235b210ae7ac8dd0696ea845fdc3707d67955d53ad4c0de027",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "i686-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "dest": "rust-src",
                    "url": "https://static.rust-lang.org/dist/2024-09-05/rust-src-1.81.0.tar.xz",
                    "sha256": "a7d79e7d8bb541b3ba5881e693ad94133f4b7555681f8530c65270ed5341013e",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust-src",
                        "target": "*"
                    }
                }
            ],
            "build-options": {
                "arch": {
                    "x86_64": {
                        "env": {
                            "NATIVE_TARGET": "x86_64-unknown-linux-gnu",
                            "COMPAT_TARGET": "i686-unknown-linux-gnu"
                        }
                    },
                    "i386": {
                        "env": {
                            "NATIVE_TARGET": "i686-unknown-linux-gnu",
                            "COMPAT_TARGET": ""
                        }
                    },
                    "aarch64": {
                        "env": {
                            "NATIVE_TARGET": "aarch64-unknown-linux-gnu",
                            "COMPAT_TARGET": "armv7-unknown-linux-gnueabihf"
                        }
                    },
                    "arm": {
                        "env": {
                            "NATIVE_TARGET": "armv7-unknown-linux-gnueabihf",
                            "COMPAT_TARGET": ""
                        }
                    }
                }
            },
            "build-commands": [
                "cd \"rust-$NATIVE_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --without=rust-docs --without=rust-docs-json-preview --disable-ldconfig --verbose",
                "test -n \"$COMPAT_TARGET\" &&  cd \"rust-$COMPAT_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose --components=rust-std-$COMPAT_TARGET,rust-analysis-$COMPAT_TARGET",
                "cd rust-src && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose"
            ]
        },
        {
            "name": "rust-analyzer",
            "sources": [
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/rust-lang/rust-analyzer/releases/download/2024-09-30/rust-analyzer-x86_64-unknown-linux-gnu.gz",
                    "sha256": "b92213192ff8ce09363369eaa407b514f774f0cb24bc8ea57342c9228551b92a",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-x86_64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/rust-lang/rust-analyzer/releases/download/2024-09-30/rust-analyzer-aarch64-unknown-linux-gnu.gz",
                    "sha256": "17b890328e2ebcb4b8f271d42be064b193b4473f3dba67e31b7d47f0b4b24ab2",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-aarch64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "gunzip rust-analyzer-linux.gz",
                "install -m 755 rust-analyzer-linux /usr/lib/sdk/rust-stable/bin/rust-analyzer"
            ]
        },
        {
            "name": "mold",
            "sources": [
                {
                    "type": "archive",
                    "dest-filename": "mold-linux.tar.gz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/rui314/mold/releases/download/v2.34.0/mold-2.34.0-x86_64-linux.tar.gz",
                    "sha256": "0405c58d9afb47dad44912faa21a8fc2f8835352434b458c3ae9665e6581d1cb",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 241732,
                        "stable-only": true,
                        "url-template": "https://github.com/rui314/mold/releases/download/v$version/mold-$version-x86_64-linux.tar.gz"
                    }
                },
                {
                    "type": "archive",
                    "dest-filename": "mold-linux.tar.gz",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/rui314/mold/releases/download/v2.34.0/mold-2.34.0-aarch64-linux.tar.gz",
                    "sha256": "aa8cd24aaf65564d14f6d7ff457471c3898f7e93a1827353b7ec5e82736ee93e",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 241732,
                        "stable-only": true,
                        "url-template": "https://github.com/rui314/mold/releases/download/v$version/mold-$version-aarch64-linux.tar.gz"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "install -m 755 bin/mold /usr/lib/sdk/rust-stable/bin/mold"
            ]
        },
        {
            "name": "cargo-c",
            "sources": [
                {
                    "type": "archive",
                    "dest-filename": "cargo-c-linux.tar.gz",
                    "strip-components": 0,
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/lu-zero/cargo-c/releases/download/v0.10.4/cargo-c-x86_64-unknown-linux-musl.tar.gz",
                    "sha256": "a370d24bfecab96f519010410b0a25c3052cae527cfe6772d1502c9bad53d246",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/lu-zero/cargo-c/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"cargo-c-x86_64-unknown-linux-musl.tar.gz\") | .browser_download_url"
                    }
                },
                {
                    "type": "archive",
                    "dest-filename": "cargo-c-linux.tar.gz",
                    "strip-components": 0,
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/lu-zero/cargo-c/releases/download/v0.10.4/cargo-c-aarch64-unknown-linux-musl.tar.gz",
                    "sha256": "5e535bd92685ec16eb78285f409df58d0ca8a51709243f51afba9f610613b78e",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/lu-zero/cargo-c/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"cargo-c-aarch64-unknown-linux-musl.tar.gz\") | .browser_download_url"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "install -m 755 cargo-capi /usr/lib/sdk/rust-stable/bin/cargo-capi",
                "install -m 755 cargo-cbuild /usr/lib/sdk/rust-stable/bin/cargo-cbuild",
                "install -m 755 cargo-cinstall /usr/lib/sdk/rust-stable/bin/cargo-cinstall"
            ]
        },
        {
            "name": "scripts",
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/rust-stable/bin"
                    ],
                    "dest-filename": "enable.sh"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "cp enable.sh /usr/lib/sdk/rust-stable/"
            ]
        },
        {
            "name": "cargo-vendor-filterer",
            "buildsystem": "simple",
            "build-options": {
                "append-path": "/usr/lib/sdk/rust-stable/bin",
                "env": {
                    "CARGO_HOME": "/run/build/cargo-vendor-filterer/cargo"
                }
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/coreos/cargo-vendor-filterer/",
                    "commit": "28c7760484240184c95f76b5a3f11d92a6779ff1"
                },
                "./cargo-vendor-filterer.json"
            ],
            "build-commands": [
                "mv ./cargo/config ./cargo/config.toml",
                "cargo --offline fetch --manifest-path ./Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -m 755 ./target/release/cargo-vendor-filterer /usr/lib/sdk/rust-stable/bin/cargo-vendor-filterer"
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/metainfo",
                "cp org.freedesktop.Sdk.Extension.rust-stable.appdata.xml ${FLATPAK_DEST}/share/metainfo",
                "appstreamcli compose --components=${FLATPAK_ID} --prefix=/ --origin=${FLATPAK_ID} --result-root=${FLATPAK_DEST} --data-dir=${FLATPAK_DEST}/share/app-info/xmls ${FLATPAK_DEST}"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.rust-stable.appdata.xml"
                }
            ]
        }
    ]
}
