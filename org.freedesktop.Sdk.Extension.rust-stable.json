{
    "id": "org.freedesktop.Sdk.Extension.rust-stable",
    "branch": "23.08",
    "runtime": "org.freedesktop.Sdk",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "23.08",
    "sdk-extensions": [],
    "separate-locales": false,
    "appstream-compose": false,
    "cleanup": [
        "/share/info",
        "/share/man"
    ],
    "build-options": {
        "prefix": "/usr/lib/sdk/rust-stable"
    },
    "modules": [
        {
            "name": "rust",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "arm",
                        "aarch64"
                    ],
                    "dest": "rust-armv7-unknown-linux-gnueabihf",
                    "url": "https://static.rust-lang.org/dist/2024-05-02/rust-1.78.0-armv7-unknown-linux-gnueabihf.tar.xz",
                    "sha256": "8439fa6c2d6d8705d0d0465a95c3cedff78a33467fdc1805bf1c58cb1b8c1186",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "armv7-unknown-linux-gnueabihf"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "dest": "rust-aarch64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2024-05-02/rust-1.78.0-aarch64-unknown-linux-gnu.tar.xz",
                    "sha256": "e33789c7c32d89cbb939b2f58b7651c736cb9f37e42e11152cda7cc33df686a0",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "aarch64-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "dest": "rust-x86_64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2024-05-02/rust-1.78.0-x86_64-unknown-linux-gnu.tar.xz",
                    "sha256": "ea144a052c0980dfbc6c84b3eda21e9f61b02b7b171787c7de80d7a8ad344ab3",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "x86_64-unknown-linux-gnu",
                        "is-main-source": true
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "i386",
                        "x86_64"
                    ],
                    "dest": "rust-i686-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2024-05-02/rust-1.78.0-i686-unknown-linux-gnu.tar.xz",
                    "sha256": "58f7bed29a81cff8bace4cfacd91e6396eb03b830ac836fcf3c014541bb307cc",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "i686-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "dest": "rust-src",
                    "url": "https://static.rust-lang.org/dist/2024-05-02/rust-src-1.78.0.tar.xz",
                    "sha256": "6fa043f586bb84b3ff877927fd3996c176225657dd9778065a11f2f3a2b747a6",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust-src",
                        "target": "*"
                    }
                }
            ],
            "build-options": {
                "arch": {
                    "x86_64": {
                        "env": {
                            "NATIVE_TARGET": "x86_64-unknown-linux-gnu",
                            "COMPAT_TARGET": "i686-unknown-linux-gnu"
                        }
                    },
                    "i386": {
                        "env": {
                            "NATIVE_TARGET": "i686-unknown-linux-gnu",
                            "COMPAT_TARGET": ""
                        }
                    },
                    "aarch64": {
                        "env": {
                            "NATIVE_TARGET": "aarch64-unknown-linux-gnu",
                            "COMPAT_TARGET": "armv7-unknown-linux-gnueabihf"
                        }
                    },
                    "arm": {
                        "env": {
                            "NATIVE_TARGET": "armv7-unknown-linux-gnueabihf",
                            "COMPAT_TARGET": ""
                        }
                    }
                }
            },
            "build-commands": [
                "cd \"rust-$NATIVE_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --without=rust-docs --without=rust-docs-json-preview --disable-ldconfig --verbose",
                "test -n \"$COMPAT_TARGET\" &&  cd \"rust-$COMPAT_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose --components=rust-std-$COMPAT_TARGET,rust-analysis-$COMPAT_TARGET",
                "cd rust-src && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose"
            ]
        },
        {
            "name": "rust-analyzer",
            "sources": [
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/rust-lang/rust-analyzer/releases/download/2024-06-11/rust-analyzer-x86_64-unknown-linux-gnu.gz",
                    "sha256": "51d494dce3d385e0adccbb574230087c3b96b438dc182b6b3f57a05bf1ba01f4",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-x86_64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/rust-lang/rust-analyzer/releases/download/2024-06-11/rust-analyzer-aarch64-unknown-linux-gnu.gz",
                    "sha256": "80b5645c2d9ffdfdd0c0d042bdad938c539849e7b395efe60c5b2443e2223845",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-aarch64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "gunzip rust-analyzer-linux.gz",
                "install -m 755 rust-analyzer-linux /usr/lib/sdk/rust-stable/bin/rust-analyzer"
            ]
        },
        {
            "name": "mold",
            "sources": [
                {
                    "type": "archive",
                    "dest-filename": "mold-linux.tar.gz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/rui314/mold/releases/download/v2.32.0/mold-2.32.0-x86_64-linux.tar.gz",
                    "sha256": "2e69989cc1c0041ecfcb31fec57b2a5caa7802848d9468ffa5b1b348b26e4982",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 241732,
                        "stable-only": true,
                        "url-template": "https://github.com/rui314/mold/releases/download/v$version/mold-$version-x86_64-linux.tar.gz"
                    }
                },
                {
                    "type": "archive",
                    "dest-filename": "mold-linux.tar.gz",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/rui314/mold/releases/download/v2.32.0/mold-2.32.0-aarch64-linux.tar.gz",
                    "sha256": "c75d17c1c530dee4b9ca811aaacca782a9fe8538ae8c68ce619f198a58e2b0e7",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 241732,
                        "stable-only": true,
                        "url-template": "https://github.com/rui314/mold/releases/download/v$version/mold-$version-aarch64-linux.tar.gz"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "install -m 755 bin/mold /usr/lib/sdk/rust-stable/bin/mold"
            ]
        },
        {
            "name": "cargo-c",
            "sources": [
                {
                    "type": "archive",
                    "dest-filename": "cargo-c-linux.tar.gz",
                    "strip-components": 0,
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/lu-zero/cargo-c/releases/download/v0.9.32/cargo-c-x86_64-unknown-linux-musl.tar.gz",
                    "sha256": "afcbd634925866d72d685479890208b48b4d845780192d163cebf0c354b9b151",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/lu-zero/cargo-c/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"cargo-c-x86_64-unknown-linux-musl.tar.gz\") | .browser_download_url"
                    }
                },
                {
                    "type": "archive",
                    "dest-filename": "cargo-c-linux.tar.gz",
                    "strip-components": 0,
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/lu-zero/cargo-c/releases/download/v0.9.32/cargo-c-aarch64-unknown-linux-musl.tar.gz",
                    "sha256": "27f380efc87bcb2baef260f54dabcdd99c12db35704d1915d7986606098e96e7",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/lu-zero/cargo-c/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"cargo-c-aarch64-unknown-linux-musl.tar.gz\") | .browser_download_url"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "install -m 755 cargo-capi /usr/lib/sdk/rust-stable/bin/cargo-capi",
                "install -m 755 cargo-cbuild /usr/lib/sdk/rust-stable/bin/cargo-cbuild",
                "install -m 755 cargo-cinstall /usr/lib/sdk/rust-stable/bin/cargo-cinstall"
            ]
        },
        {
            "name": "scripts",
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/rust-stable/bin"
                    ],
                    "dest-filename": "enable.sh"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "cp enable.sh /usr/lib/sdk/rust-stable/"
            ]
        },
        {
            "name": "cargo-vendor-filterer",
            "buildsystem": "simple",
            "build-options": {
                "append-path": "/usr/lib/sdk/rust-stable/bin",
                "env": {
                    "CARGO_HOME": "/run/build/cargo-vendor-filterer/cargo"
                }
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/coreos/cargo-vendor-filterer/",
                    "commit": "28c7760484240184c95f76b5a3f11d92a6779ff1"
                },
                "./cargo-vendor-filterer.json"
            ],
            "build-commands": [
                "mv ./cargo/config ./cargo/config.toml",
                "cargo --offline fetch --manifest-path ./Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -m 755 ./target/release/cargo-vendor-filterer /usr/lib/sdk/rust-stable/bin/cargo-vendor-filterer"
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.freedesktop.Sdk.Extension.rust-stable.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose  --basename=org.freedesktop.Sdk.Extension.rust-stable --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.rust-stable"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.rust-stable.appdata.xml"
                }
            ]
        }
    ]
}
