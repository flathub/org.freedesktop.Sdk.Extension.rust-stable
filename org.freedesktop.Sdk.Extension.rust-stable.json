{
    "id": "org.freedesktop.Sdk.Extension.rust-stable",
    "branch": "21.08",
    "runtime": "org.freedesktop.Sdk",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "21.08",
    "sdk-extensions": [],
    "separate-locales": false,
    "appstream-compose": false,
    "cleanup": [
        "/share/info",
        "/share/man"
    ],
    "build-options": {
        "prefix": "/usr/lib/sdk/rust-stable"
    },
    "modules": [
        {
            "name": "rust",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "arm",
                        "aarch64"
                    ],
                    "dest": "rust-armv7-unknown-linux-gnueabihf",
                    "url": "https://static.rust-lang.org/dist/2022-01-13/rust-1.58.0-armv7-unknown-linux-gnueabihf.tar.xz",
                    "sha256": "36c58fd6cf5d1d8a356b89138e7ad6fd4a6f0fb53ff0ae187a602aaeee29ba8d",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "armv7-unknown-linux-gnueabihf"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "dest": "rust-aarch64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2022-01-13/rust-1.58.0-aarch64-unknown-linux-gnu.tar.xz",
                    "sha256": "e31f80898d42de068a6fc3f93900a7b41f56c2a85bda0646f1a5c752ab7900e0",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "aarch64-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "dest": "rust-x86_64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2022-01-13/rust-1.58.0-x86_64-unknown-linux-gnu.tar.xz",
                    "sha256": "fc77eefec4d1bff9c578c94f5a2c054d196ae51bdea0e042b4d0829efc58476c",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "x86_64-unknown-linux-gnu",
                        "is-main-source": true
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "i386",
                        "x86_64"
                    ],
                    "dest": "rust-i686-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2022-01-13/rust-1.58.0-i686-unknown-linux-gnu.tar.xz",
                    "sha256": "d25f32fe72bcd077b8b4cb61ba280655f0c70607aeae19cadb70562bb69200db",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "i686-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "dest": "rust-src",
                    "url": "https://static.rust-lang.org/dist/2022-01-13/rust-src-1.58.0.tar.xz",
                    "sha256": "0c959ec0d6b0f6cd08167a142fb0a140ae130c3158acfcdf44728c46a568ea2e",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust-src",
                        "target": "*"
                    }
                }
            ],
            "build-options": {
                "arch": {
                    "x86_64": {
                        "env": {
                            "NATIVE_TARGET": "x86_64-unknown-linux-gnu",
                            "COMPAT_TARGET": "i686-unknown-linux-gnu"
                        }
                    },
                    "i386": {
                        "env": {
                            "NATIVE_TARGET": "i686-unknown-linux-gnu",
                            "COMPAT_TARGET": ""
                        }
                    },
                    "aarch64": {
                        "env": {
                            "NATIVE_TARGET": "aarch64-unknown-linux-gnu",
                            "COMPAT_TARGET": "armv7-unknown-linux-gnueabihf"
                        }
                    },
                    "arm": {
                        "env": {
                            "NATIVE_TARGET": "armv7-unknown-linux-gnueabihf",
                            "COMPAT_TARGET": ""
                        }
                    }
                }
            },
            "build-commands": [
                "cd \"rust-$NATIVE_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --without=rust-docs --disable-ldconfig --verbose",
                "test -n \"$COMPAT_TARGET\" &&  cd \"rust-$COMPAT_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose --components=rust-std-$COMPAT_TARGET,rust-analysis-$COMPAT_TARGET",
                "cd rust-src && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose"
            ]
        },
        {
            "name": "rust-analyzer",
            "sources": [
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/rust-analyzer/rust-analyzer/releases/download/2022-01-17/rust-analyzer-x86_64-unknown-linux-gnu.gz",
                    "sha256": "9533fcd07b16de0dd2cbd54f91eaf07f19980bc6e1aecfec2ae27dcf766822e6",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-x86_64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/rust-analyzer/rust-analyzer/releases/download/2022-01-17/rust-analyzer-aarch64-unknown-linux-gnu.gz",
                    "sha256": "9e9f4334fcd520f6f2b0c3be6a94f6797cdcc82222a66b3b5325dfe4b55f9187",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-aarch64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "gunzip rust-analyzer-linux.gz",
                "install -m 755 rust-analyzer-linux /usr/lib/sdk/rust-stable/bin/rust-analyzer"
            ]
        },
        {
            "name": "scripts",
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/rust-stable/bin"
                    ],
                    "dest-filename": "enable.sh"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "cp enable.sh /usr/lib/sdk/rust-stable/"
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.freedesktop.Sdk.Extension.rust-stable.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose  --basename=org.freedesktop.Sdk.Extension.rust-stable --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.rust-stable"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.rust-stable.appdata.xml"
                }
            ]
        }
    ]
}