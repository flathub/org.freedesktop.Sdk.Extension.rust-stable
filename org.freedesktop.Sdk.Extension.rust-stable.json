{
    "id": "org.freedesktop.Sdk.Extension.rust-stable",
    "branch": "22.08",
    "runtime": "org.freedesktop.Sdk",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "22.08",
    "sdk-extensions": [],
    "separate-locales": false,
    "appstream-compose": false,
    "cleanup": [
        "/share/info",
        "/share/man"
    ],
    "build-options": {
        "prefix": "/usr/lib/sdk/rust-stable"
    },
    "modules": [
        {
            "name": "rust",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "arm",
                        "aarch64"
                    ],
                    "dest": "rust-armv7-unknown-linux-gnueabihf",
                    "url": "https://static.rust-lang.org/dist/2023-06-01/rust-1.70.0-armv7-unknown-linux-gnueabihf.tar.xz",
                    "sha256": "f0209965ec561d79f076cd6d810188055a4ad68657e5e3c25be451753492864d",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "armv7-unknown-linux-gnueabihf"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "dest": "rust-aarch64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2023-06-01/rust-1.70.0-aarch64-unknown-linux-gnu.tar.xz",
                    "sha256": "a36e20a55e39c857f9ec69b146ae04572d5e666e76ff2dd6422cc8f575aed1c7",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "aarch64-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "dest": "rust-x86_64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2023-06-01/rust-1.70.0-x86_64-unknown-linux-gnu.tar.xz",
                    "sha256": "991b59d1d0cd0dfcb2463bd79d2df1a235380f725557cdee831ee3c1d87a3122",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "x86_64-unknown-linux-gnu",
                        "is-main-source": true
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "i386",
                        "x86_64"
                    ],
                    "dest": "rust-i686-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2023-06-01/rust-1.70.0-i686-unknown-linux-gnu.tar.xz",
                    "sha256": "e3fb7f9d825e1bd1720765a358361ba4517584f6d0c1a1d80b2230e2f97c9b88",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "i686-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "dest": "rust-src",
                    "url": "https://static.rust-lang.org/dist/2023-06-01/rust-src-1.70.0.tar.xz",
                    "sha256": "5701a30520c6bc280b96a1b9c376d9e2db5e8442b5f8ed539554c362e1ea4075",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust-src",
                        "target": "*"
                    }
                }
            ],
            "build-options": {
                "arch": {
                    "x86_64": {
                        "env": {
                            "NATIVE_TARGET": "x86_64-unknown-linux-gnu",
                            "COMPAT_TARGET": "i686-unknown-linux-gnu"
                        }
                    },
                    "i386": {
                        "env": {
                            "NATIVE_TARGET": "i686-unknown-linux-gnu",
                            "COMPAT_TARGET": ""
                        }
                    },
                    "aarch64": {
                        "env": {
                            "NATIVE_TARGET": "aarch64-unknown-linux-gnu",
                            "COMPAT_TARGET": "armv7-unknown-linux-gnueabihf"
                        }
                    },
                    "arm": {
                        "env": {
                            "NATIVE_TARGET": "armv7-unknown-linux-gnueabihf",
                            "COMPAT_TARGET": ""
                        }
                    }
                }
            },
            "build-commands": [
                "cd \"rust-$NATIVE_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --without=rust-docs --without=rust-docs-json-preview --disable-ldconfig --verbose",
                "test -n \"$COMPAT_TARGET\" &&  cd \"rust-$COMPAT_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose --components=rust-std-$COMPAT_TARGET,rust-analysis-$COMPAT_TARGET",
                "cd rust-src && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose"
            ]
        },
        {
            "name": "rust-analyzer",
            "sources": [
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/rust-lang/rust-analyzer/releases/download/2023-07-03/rust-analyzer-x86_64-unknown-linux-gnu.gz",
                    "sha256": "c28f4b57e3cebb92093b4f6913c6098665ae8fb0aa3cc521102490a459c9d786",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-x86_64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/rust-lang/rust-analyzer/releases/download/2023-07-03/rust-analyzer-aarch64-unknown-linux-gnu.gz",
                    "sha256": "6b50736151ff6b10db2b614d521ba7c8155820a8be844bc47293fd63a6e4a16d",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-aarch64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "gunzip rust-analyzer-linux.gz",
                "install -m 755 rust-analyzer-linux /usr/lib/sdk/rust-stable/bin/rust-analyzer"
            ]
        },
        {
            "name": "mold",
            "sources": [
                {
                    "type": "archive",
                    "dest-filename": "mold-linux.tar.gz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/rui314/mold/releases/download/v1.11.0/mold-1.11.0-x86_64-linux.tar.gz",
                    "sha256": "bf788940db4a9ac19e7745c821bf6ee18ff4d75441a803d84f86c9f3b0aa2a5e",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 241732,
                        "stable-only": true,
                        "url-template": "https://github.com/rui314/mold/releases/download/v$version/mold-$version-x86_64-linux.tar.gz"
                    }
                },
                {
                    "type": "archive",
                    "dest-filename": "mold-linux.tar.gz",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/rui314/mold/releases/download/v1.11.0/mold-1.11.0-aarch64-linux.tar.gz",
                    "sha256": "4d7f0cc976ed1dfde1ceeaadd16829427a477eba1b49ff82dd490395f32eb78c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 241732,
                        "stable-only": true,
                        "url-template": "https://github.com/rui314/mold/releases/download/v$version/mold-$version-aarch64-linux.tar.gz"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "install -m 755 bin/mold /usr/lib/sdk/rust-stable/bin/mold"
            ]
        },
        {
            "name": "scripts",
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/rust-stable/bin"
                    ],
                    "dest-filename": "enable.sh"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "cp enable.sh /usr/lib/sdk/rust-stable/"
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.freedesktop.Sdk.Extension.rust-stable.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose  --basename=org.freedesktop.Sdk.Extension.rust-stable --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.rust-stable"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.rust-stable.appdata.xml"
                }
            ]
        }
    ]
}
