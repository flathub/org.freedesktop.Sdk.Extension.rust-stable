{
    "id": "org.freedesktop.Sdk.Extension.rust-stable",
    "branch": "21.08",
    "runtime": "org.freedesktop.Sdk",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "21.08",
    "sdk-extensions": [],
    "separate-locales": false,
    "appstream-compose": false,
    "cleanup": [
        "/share/info",
        "/share/man"
    ],
    "build-options": {
        "prefix": "/usr/lib/sdk/rust-stable"
    },
    "modules": [
        {
            "name": "rust",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "arm",
                        "aarch64"
                    ],
                    "dest": "rust-armv7-unknown-linux-gnueabihf",
                    "url": "https://static.rust-lang.org/dist/2022-01-20/rust-1.58.1-armv7-unknown-linux-gnueabihf.tar.xz",
                    "sha256": "5295b337779e0abfc43b8723b982a03df785cc1bc8cc327188337e89ae9bde17",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "armv7-unknown-linux-gnueabihf"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "dest": "rust-aarch64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2022-01-20/rust-1.58.1-aarch64-unknown-linux-gnu.tar.xz",
                    "sha256": "0a80900aa160de4292b1174e25f183bd88f6c2fbb3056a59fcb4d658c70084cb",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "aarch64-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "dest": "rust-x86_64-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2022-01-20/rust-1.58.1-x86_64-unknown-linux-gnu.tar.xz",
                    "sha256": "f71b077caf0becbd0af9fd22bc1fa31c4fdf7a21fe046da8a15a7bde1286da25",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "x86_64-unknown-linux-gnu",
                        "is-main-source": true
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "i386",
                        "x86_64"
                    ],
                    "dest": "rust-i686-unknown-linux-gnu",
                    "url": "https://static.rust-lang.org/dist/2022-01-20/rust-1.58.1-i686-unknown-linux-gnu.tar.xz",
                    "sha256": "110ca4967351d8535f3d39e24f40e2941c20346c5765d3530270e134ae50568e",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust",
                        "target": "i686-unknown-linux-gnu"
                    }
                },
                {
                    "type": "archive",
                    "dest": "rust-src",
                    "url": "https://static.rust-lang.org/dist/2022-01-20/rust-src-1.58.1.tar.xz",
                    "sha256": "c4d85a0db66f736370e1e7ed9a80ee8cda203c7e15d4c5d94d980bb14414fcdd",
                    "x-checker-data": {
                        "type": "rust",
                        "package": "rust-src",
                        "target": "*"
                    }
                }
            ],
            "build-options": {
                "arch": {
                    "x86_64": {
                        "env": {
                            "NATIVE_TARGET": "x86_64-unknown-linux-gnu",
                            "COMPAT_TARGET": "i686-unknown-linux-gnu"
                        }
                    },
                    "i386": {
                        "env": {
                            "NATIVE_TARGET": "i686-unknown-linux-gnu",
                            "COMPAT_TARGET": ""
                        }
                    },
                    "aarch64": {
                        "env": {
                            "NATIVE_TARGET": "aarch64-unknown-linux-gnu",
                            "COMPAT_TARGET": "armv7-unknown-linux-gnueabihf"
                        }
                    },
                    "arm": {
                        "env": {
                            "NATIVE_TARGET": "armv7-unknown-linux-gnueabihf",
                            "COMPAT_TARGET": ""
                        }
                    }
                }
            },
            "build-commands": [
                "cd \"rust-$NATIVE_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --without=rust-docs --disable-ldconfig --verbose",
                "test -n \"$COMPAT_TARGET\" &&  cd \"rust-$COMPAT_TARGET\" && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose --components=rust-std-$COMPAT_TARGET,rust-analysis-$COMPAT_TARGET",
                "cd rust-src && ./install.sh --prefix=/usr/lib/sdk/rust-stable --disable-ldconfig --verbose"
            ]
        },
        {
            "name": "rust-analyzer",
            "sources": [
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/rust-analyzer/rust-analyzer/releases/download/2022-01-24/rust-analyzer-x86_64-unknown-linux-gnu.gz",
                    "sha256": "71ba95ec7962e4743a3915528e951d6e3555b1ff407042d56d97fa505938435c",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-x86_64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "dest-filename": "rust-analyzer-linux.gz",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/rust-analyzer/rust-analyzer/releases/download/2022-01-24/rust-analyzer-aarch64-unknown-linux-gnu.gz",
                    "sha256": "6e9414d56e009cfa6ae3fc5c32942f902d6bb77bf1d438ca65f129e2560489e8",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rust-analyzer/rust-analyzer/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rust-analyzer-aarch64-unknown-linux-gnu.gz\") | .browser_download_url"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "gunzip rust-analyzer-linux.gz",
                "install -m 755 rust-analyzer-linux /usr/lib/sdk/rust-stable/bin/rust-analyzer"
            ]
        },
        {
            "name": "scripts",
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/rust-stable/bin"
                    ],
                    "dest-filename": "enable.sh"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "cp enable.sh /usr/lib/sdk/rust-stable/"
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.freedesktop.Sdk.Extension.rust-stable.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose  --basename=org.freedesktop.Sdk.Extension.rust-stable --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.rust-stable"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.rust-stable.appdata.xml"
                }
            ]
        }
    ]
}